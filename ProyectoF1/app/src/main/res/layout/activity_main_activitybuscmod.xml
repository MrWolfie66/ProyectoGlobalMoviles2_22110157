<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".MainActivitybuscmod">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_view"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/top_view">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nombre de la Mascota"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="17sp"
                android:textAlignment="center"
                android:background="@drawable/rounder_corner"
                android:inputType="text"
                android:id="@+id/txt_mascota_input"
                android:layout_marginTop="5dp"
                android:padding="16dp"
                />
            <Button
                android:id="@+id/btn_buscar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Buscar"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:backgroundTint="@color/white"
                android:textColor="#3B84F1"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:textSize="17sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nombre Mascota"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="17sp"
                android:background="@drawable/rounder_corner"
                android:inputType="text"
                android:textAlignment="center"
                android:id="@+id/txt_mascota_result"
                android:layout_marginTop="5dp"
                android:padding="16dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Genero"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="17sp"
                android:background="@drawable/rounder_corner"
                android:inputType="text"
                android:textAlignment="center"
                android:id="@+id/txt_genero_result"
                android:layout_marginTop="5dp"
                android:padding="16dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nombre Doctor"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="17sp"
                android:background="@drawable/rounder_corner"
                android:inputType="text"
                android:textAlignment="center"
                android:id="@+id/txt_doctor_result"
                android:layout_marginTop="5dp"
                android:padding="16dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Fecha y Hora"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="17sp"
                android:background="@drawable/rounder_corner"
                android:inputType="text"
                android:textAlignment="center"
                android:id="@+id/txt_fechahora_result"
                android:layout_marginTop="5dp"
                android:padding="16dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Motivo"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="17sp"
                android:background="@drawable/rounder_corner"
                android:inputType="text"
                android:textAlignment="center"
                android:id="@+id/txt_motivo_result"
                android:layout_marginTop="5dp"
                android:padding="16dp"
                />
            <Button
                android:id="@+id/btn_citamodificar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Guardar Datos"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:backgroundTint="@color/white"
                android:layout_marginRight="25dp"
                android:textColor="#3B84F1"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/btn_eliminar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Eliminar Cita"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:backgroundTint="@color/white"
                android:layout_marginRight="25dp"
                android:textColor="#3B84F1"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/btn_regresarmenu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Salir"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:backgroundTint="@color/white"
                android:textColor="#3B84F1"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:textSize="17sp"/>


        </LinearLayout>



    </GridLayout>
    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tremendoperrito"
        android:layout_marginTop="30dp"/>
    />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B Y M Cita"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"/>
</RelativeLayout>


